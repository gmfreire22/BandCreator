<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="20sp"
        android:paddingLeft="12sp"
        android:paddingRight="12sp"
        android:paddingTop="42sp">

        <TextView
            android:id="@+id/titulo_de_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Cadastro"
            android:textColor="@color/Black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/novo_usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_de_cadastro"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="12sp"
            android:text="Email"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/novo_usuario_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/novo_usuario"
            android:layout_marginTop="10sp"
            android:background="@drawable/input"
            android:textSize="20sp"
            android:inputType="textFilter"
            android:digits="abcdefghijklmnopqrstuvwxyz1234567890-_.@"
            android:maxLines="1"
            android:lines="1"
            android:maxLength="@integer/maximum_lines"
            />

        <TextView
            android:id="@+id/senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/novo_usuario_input"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="20sp"
            android:text="Senha"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/nova_senha_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/senha"
            android:layout_marginTop="10sp"
            android:background="@drawable/input"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:lines="1"
            android:maxLength="@integer/maximum_lines" />

        <TextView
            android:id="@+id/confirmar_a_senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nova_senha_input"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="20sp"
            android:text="Confirmar a senha"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/confirmar_a_senha_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmar_a_senha"
            android:layout_marginTop="10sp"
            android:background="@drawable/input"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:lines="1"
            android:maxLength="@integer/maximum_lines" />

        <Button
            android:id="@+id/Fazer_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/confirmar_a_senha_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="34dp"
            android:background="@drawable/butao"
            android:text="Cadastre-se"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/texto_voltar_para_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="Já tem uma conta?"
                android:textSize="18sp" />

            <Button
                android:id="@+id/voltar_para_login"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/texto_voltar_para_login"
                android:layout_toEndOf="@+id/texto_voltar_para_login"
                android:text="Faça login"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp" />
        </RelativeLayout>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>