<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="52sp"
    android:paddingLeft="12sp"
    android:paddingRight="12sp"
    android:paddingTop="50sp">

        <TextView
            android:id="@+id/titulo_de_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Login"
            android:textColor="@color/Black"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/usuario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo_de_login"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="12sp"
            android:text="Usuário"
            android:textSize="20sp" />

    <EditText
        android:id="@+id/usuario_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usuario"
        android:layout_marginTop="10sp"
        android:background="@drawable/input"
        android:lines="1"
        android:maxLength="@integer/maximum_lines"
        android:maxLines="1"
        android:textSize="20sp"
        android:inputType="textFilter"
        android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890-_."/>

        <TextView
            android:id="@+id/senha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/usuario_input"
            android:layout_marginLeft="2sp"
            android:layout_marginTop="20sp"
            android:text="Senha"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/senha_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/senha"
            android:layout_marginTop="10sp"
            android:background="@drawable/input"
            android:textSize="20sp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:lines="1"
            android:maxLength="@integer/maximum_lines" />

        <Button
            android:id="@+id/fazer_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/senha_input"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20sp"
            android:background="@drawable/butao"
            android:text="Fazer login"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/texto_voltar_para_cadastro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="Não tem uma conta?"
            android:textSize="18sp" />

        <Button
            android:id="@+id/voltar_cadastro"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/texto_voltar_para_cadastro"
            android:layout_toEndOf="@+id/texto_voltar_para_cadastro"
            android:text="Cadastre-se"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp" />
    </RelativeLayout>

    </RelativeLayout>